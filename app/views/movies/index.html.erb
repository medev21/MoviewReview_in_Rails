<h1 class="current-category"><%= params[:category]%></h1>

<% if @movies.count == 0 %>
  <h2>There are no books currently in this category</h2>
<% else %>

<div class="row">
  <% @movies.each do |movie| %>
    <!-- <h2><%= link_to movie.title, movie_path(movie) %></h2> -->
    <div class="col-md-3">
      <a href="/movies/<%= movie.id %>">
        <%= image_tag movie.movie_img.url(:movie_index), class: 'movie' %>
      </a>
    </div>
  <% end %>
</div>
<% end %>
